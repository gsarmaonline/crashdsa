  "testCases": [
    {
      "id": "tc-1",
      "inputs": {"nums": [5, 3, 4, 5, 6]},
      "expected": 2,
      "explanation": "Remove prefix [5,3]; remaining [4,5,6] is strictly increasing. 2 removals.",
      "tags": ["basic"]
    },
    {
      "id": "tc-2",
      "inputs": {"nums": [1, 2, 3]},
