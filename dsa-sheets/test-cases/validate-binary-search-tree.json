    },
    {
      "id": "tc-3",
      "inputs": { "root": [1] },
      "expected": true,
      "tags": ["single-element"]
    },
    {
      "id": "tc-4",
      "inputs": { "root": [5, 4, 6, null, null, 3, 7] },
      "expected": false,
      "explanation": "Node 3 is in right subtree of 5 but 3 < 5",
      "tags": ["edge-case"]
    },
    {
      "id": "tc-5",
      "inputs": { "root": [2, 2, 2] },
