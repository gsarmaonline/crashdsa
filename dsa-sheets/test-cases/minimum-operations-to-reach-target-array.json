{
  "slug": "minimum-operations-to-reach-target-array",
  "functionName": "minimumOperationsToReachTargetArray",
  "params": [
    {
      "name": "nums",
      "type": "int[]"
    }
  ],
  "returnType": "int",
  "_status": "complete",
  "description": "Return the minimum number of increment-by-1 operations on any subarray needed to transform an all-zeros array into the target array nums.",
  "examples": [
    {"input": "nums=[1,2,3]", "output": "3"},
    {"input": "nums=[3,1,1]", "output": "3"}
  ],
  "constraints": ["1 <= nums.length <= 10^5", "0 <= nums[i] <= 10^9"],
  "testCases": [
    {
      "id": "tc-1",
      "inputs": {"nums": [1, 2, 3]},
      "expected": 3,
      "explanation": "ops = nums[0] + sum(max(0, nums[i]-nums[i-1]) for i>0) = 1 + 1 + 1 = 3.",
      "tags": ["basic", "increasing"]
    },
    {
      "id": "tc-2",
      "inputs": {"nums": [3, 1, 1]},
      "expected": 3,
      "explanation": "ops = 3 + max(0, 1-3) + max(0, 1-1) = 3 + 0 + 0 = 3.",
      "tags": ["basic", "decreasing-prefix"]
    },
    {
      "id": "tc-3",
      "inputs": {"nums": [1]},
      "expected": 1,
      "explanation": "Single element 1 requires exactly 1 operation.",
      "tags": ["edge", "single"]
    },
    {
      "id": "tc-4",
      "inputs": {"nums": [0, 0, 0]},
      "expected": 0,
      "explanation": "Target array is all zeros; no operations needed.",
      "tags": ["all-zeros"]
    },
    {
      "id": "tc-5",
      "inputs": {"nums": [5, 1, 5]},
      "expected": 9,
      "explanation": "ops = 5 + max(0, 1-5) + max(0, 5-1) = 5 + 0 + 4 = 9.",
      "tags": ["valley"]
    }
  ]
}
